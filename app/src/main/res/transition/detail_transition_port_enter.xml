<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android" android:transitionOrdering="together">
    <fade android:fadingMode="fade_in" android:duration="500">
        <targets>
            <target android:excludeId="@android:id/statusBarBackground"/>
            <target android:excludeId="@android:id/navigationBarBackground"/>
        </targets>
    </fade>
    <slide android:duration="500" android:slideEdge="top">
        <targets>
            <target android:targetId="@id/toolbar"/>
        </targets>
    </slide>
    <slide android:duration="500" android:interpolator="@android:interpolator/linear" android:slideEdge="bottom">
        <targets>
            <target android:targetId="@id/layout_additional_pane"/>
        </targets>
    </slide>
</transitionSet>