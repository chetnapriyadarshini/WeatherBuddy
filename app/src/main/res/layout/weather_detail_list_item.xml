<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/list_item_extra_padding"
    android:paddingStart="@dimen/list_item_extra_padding"
    android:id="@+id/item_weather"
    android:background="@color/color_primary">

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/list_item_icon"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            tools:src="@drawable/art_clear"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/abc_list_item_padding_horizontal_material"
        android:paddingLeft="@dimen/abc_list_item_padding_horizontal_material"
        android:layout_weight="7"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/list_item_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            tools:text="Today"
            android:textColor="@color/color_primary_light"
            android:textAppearance="?android:textAppearanceLarge"/>
        <!--android:padding="@dimen/weather_text_padding"-->


        <TextView
            android:id="@+id/list_item_forecast_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            tools:text="Clear"
            android:textColor="@color/color_primary_light"
            android:textAppearance="?android:textAppearanceSmall"/>
        <!--android:padding="@dimen/weather_text_padding"-->

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/list_item_high_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-condensed"
            tools:text="64"
            android:textColor="@color/color_primary_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
        <!--android:padding="@dimen/weather_text_padding"-->


        <TextView
            android:id="@+id/list_item_low_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/color_primary_light"
            tools:text="24"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <!--android:padding="@dimen/weather_text_padding"-->

    </LinearLayout>

</LinearLayout>